#!/bin/bash

set -e

# summary of how this script can be called:
#        * <postinst> `configure' <most-recently-configured-version>
#        * <old-postinst> `abort-upgrade' <new version>
#        * <conflictor's-postinst> `abort-remove' `in-favour' <package>
#          <new-version>
#        * <deconfigured's-postinst> `abort-deconfigure' `in-favour'
#          <failed-install-package> <version> `removing'
#          <conflicting-package> <version>
# for details, see http://www.debian.org/doc/debian-policy/ or
# the debian-policy package
#

# Function to remove a divert
function remove_divert {
  if [ ! -z "$1" ]; then
    DIVERTS=$(dpkg-divert --list | grep $1 | awk '{print $3}')
    for DIVERT in $DIVERTS; do
      sudo dpkg-divert --rename --remove $DIVERT
      # Sometimes it's forbidden to rename diverts
      CHKDIVERT=$(dpkg-divert --list | grep $DIVERT | awk '{print $3}')
      if [ "$CHKDIVERT" != "" ]; then
	sudo dpkg-divert --remove $DIVERT
      fi
    done
  fi
}

case "$1" in
    remove|purge)
    
	# Remove diversions
	remove_divert '/etc/xdg/menus/debian-menu.menu'
	remove_divert '/usr/share/kde4/apps/plasma-desktop/init/00-defaultLayout.js'
	remove_divert '/usr/share/kde4/apps/plasma-desktop/init/10-desktop-base.js'
	remove_divert '/usr/share/kde4/apps/plasma-desktop/updates/addShowActivitiesManagerPlasmoid.js'

	remove_divert '/usr/share/lightdm/lightdm.conf.d/40-kde-plasma-kf5.conf'

	# Wallpapers
	remove_divert '/usr/share/wallpapers'
	
	# Configure Ksplash
        if [ -e /usr/share/desktop-base/profiles/kde-profile/share/config/ksplashrc ]
        then
	  sed -i -e 's/\(Theme=\).*/\1"Default"/' /usr/share/desktop-base/profiles/kde-profile/share/config/ksplashrc
	fi

    ;;
    *)

    ;;
esac

# dh_installdeb will replace this with shell code automatically
# generated by other debhelper scripts.



exit 0
